{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build uWebSockets App",
      "type": "shell",
      "command": "/opt/homebrew/bin/g++-15",
      "args": [
        "-std=c++20",
        "-O3",
        "-Wall",
        "-Wextra",
        "-Iwbclient/uWebSockets/src",
        "-Iwbclient/uWebSockets/uSockets/src",
        "wbclient/main.cpp",
        "wbclient/uWebSockets/uSockets/*.o",
        "-lz",
        "-o",
        "wbclient/hello_server"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
